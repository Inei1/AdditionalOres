package inei.additionalores;

import net.minecraft.item.ItemStack;

public class Utils {
	
	public static ItemStack size(ItemStack stack, int size) 
		{ 
			if(size <= 0 || stack == null) 
			{ 
	 			return null; 
			} 
	
	 
	 		ItemStack ret = stack.copy(); 
	 		ret.stackSize = size; 
	 		return ret; 
		} 


}
